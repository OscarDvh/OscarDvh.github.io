<script>
    let currentSlide = 0; // Variable para mantener el seguimiento del slide actual

    // Funci√≥n para avanzar al siguiente slide
    function nextSlide() {
        const slides = document.querySelectorAll('.container-carousel');
        const totalSlides = slides.length;

        // Oculta el slide actual
        (slides[currentSlide] as HTMLElement).style.display = 'none';

        // Avanza al siguiente slide
        currentSlide = (currentSlide + 1) % totalSlides;

        // Muestra el nuevo slide
        (slides[currentSlide] as HTMLElement).style.display = 'block';
    }
</script>
