---
import Layout from '../layouts/Layout.astro';
import Footer from '../sections/Footer.astro';
import Info from '../sections/Info.astro';
import Main from '../sections/Main.astro';
import Mix from '../sections/Mix.astro';
---

<Layout title="Bajotierra">
	<main class="snap-y snap-mandatory relative w-full h-screen overflow-auto">
		<div class="snap-center">
			<Main client:load/>
		</div>
		<div class="snap-center w-full h-screen bg-gradient-to-r from-pink-300 via-purple-300 to-blue-300 background-animate">
			<Mix/>
		</div>
		<div class="snap-center">
			<Info/>
		</div>		
		<div class="snap-center">
			<Footer/>
		</div>	
	</main>
</Layout>

<style>
	.background-animate {
	  background-size: 400%;
  
	  -webkit-animation: AnimationName 3s ease infinite;
	  -moz-animation: AnimationName 3s ease infinite;
	  animation: AnimationName 3s ease infinite;
	}
  
	@keyframes AnimationName {
	  0%,
	  100% {
		background-position: 0% 50%;
	  }
	  50% {
		background-position: 100% 50%;
	  }
	}
  </style>

